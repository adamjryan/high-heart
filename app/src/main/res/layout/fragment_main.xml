<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.main.PlaceholderFragment" android:background="@drawable/background">

    <TextView
        android:id="@+id/section_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:layout_constraintTop_creator="1"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:layout_marginEnd="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/constraintLayout"/>
    <Button
        android:text="Let's get going."
        android:layout_width="244dp"
        android:layout_height="40dp" android:id="@+id/button" app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.437"
        app:layout_constraintVertical_bias="0.103" android:layout_marginBottom="32dp" android:layout_marginTop="32dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1" android:background="@drawable/corner_button" android:textSize="18sp" android:textColor="#FBF11C"/>
    <Button
        android:text="Give me a coffee!"
        android:layout_width="239dp"
        android:layout_height="41dp" android:id="@+id/button2"
        app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.453"
        app:layout_constraintVertical_bias="0.055" android:layout_marginBottom="32dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1" android:background="@drawable/corner_button" app:layout_constraintTop_toBottomOf="@+id/button" android:textSize="18sp"
        android:layout_marginTop="8dp" android:textColor="#FBF11C"/>
    <TextView
        android:text="Ready to start the day?"
        android:layout_width="360dp"
        android:layout_height="60dp" android:id="@+id/textView"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1" app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/button" app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
        android:textColor="#FFFFFF" app:layout_constraintVertical_bias="0.484"/>
    <ImageButton
        android:layout_width="243dp"
        android:layout_height="48dp" android:src="@drawable/sad_emoticon" android:id="@+id/imageButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.418"
        android:scaleType="fitCenter" android:layout_marginBottom="124dp" app:layout_constraintTop_toBottomOf="@+id/imageButton2" app:layout_constraintVertical_bias="0.084"
        android:background="@drawable/corner_button" android:layout_marginTop="8dp"/>
    <ImageButton
        android:layout_width="242dp"
        android:layout_height="49dp" android:src="@drawable/meh" android:id="@+id/imageButton2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.447"
        android:scaleType="fitCenter" android:layout_marginBottom="124dp" app:layout_constraintTop_toBottomOf="@+id/button2" app:layout_constraintVertical_bias="0.05"
        android:background="@drawable/corner_button" android:layout_marginTop="8dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>